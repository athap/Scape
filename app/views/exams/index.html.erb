<h1>Listing exams</h1>

<table>
  <tr>
    <th>User</th>
    <th>Question</th>
    <th>Level</th>
    <th>Selected answer identifier</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exams.each do |exam| %>
  <tr>
    <td><%= exam.user_id %></td>
    <td><%= exam.question_id %></td>
    <td><%= exam.level %></td>
    <td><%= exam.selected_answer_identifier %></td>
    <td><%= link_to 'Show', exam %></td>
    <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
    <td><%= link_to 'Destroy', exam, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

